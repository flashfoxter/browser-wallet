{
    "manifest_version": 2,
    "name": "Ethereum Wallet",
    "version": "0.1",

    "description": "Ethereum Wallet Chrome extension",
    "icons": {
        "128": "wallet-logo.png"
     },

    "browser_action": {
        "default_popup": "popup.html"
    },

    "author": "https://gotiger.com",

    "permissions": ["storage", "unlimitedStorage", "clipboardWrite", "http://localhost:8545/", "https://*.infura.io/", "https://*.etherscan.io/", "activeTab", "webRequest", "*://*.eth/", "notifications", "*://*/*"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
